<%= simple_form_for(@movie) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,input_html: {class: "form-control"},placeholder: 'نام فیلم' ,required: false ,label: false %>
    <%= f.input :year,input_html: {class: "form-control"},placeholder: 'سال ساخت' ,required: false ,label: false  %>
    <%= f.input :pg ,input_html: {class: "form-control"},collection: 0..60,label: 'رده سنی' ,required: false  %>
    <%= f.input :minute,input_html: {class: "form-control"},placeholder: 'مدت زمان' ,required: false ,label: false %>
    <%= f.input :imdbrate,input_html: {class: "form-control"},placeholder: 'امتیاز IMDB' ,required: false ,label: false %>
    <%= f.input :plot,input_html: {class: "form-control"},placeholder: 'خلاصه' ,required: false ,label: false %>
    <%= f.input :director,input_html: {class: "form-control"},placeholder: 'کارگردان' ,required: false ,label: false %>
    <%= f.input :writers,input_html: {class: "form-control"},placeholder: 'نویسنده' ,required: false ,label: false %>
    <%= f.input :stars,input_html: {class: "form-control"},placeholder: 'بازیگران' ,required: false ,label: false %>
    <%= f.input :category_id ,input_html: {class: "form-control"},collection: @category,label: 'دسته بندی' ,required: false,
                label_method: 'name' ,value_method: 'id'   %>
    <%= f.input :subcategory_id ,input_html: {class: "form-control"},collection: @subcategory,label: 'دسته بندی دوم' ,required: false,
                label_method: 'name' ,value_method: 'id'   %>
    <%= f.input :link,input_html: {class: "form-control"},placeholder: 'لینک دانلود' ,required: false ,label: false %>
    <div>
      <p>
                تصویر فیلم
        <%= f.file_field :poster %>
      </p>
      <p>
        <%= image_tag @movie.poster.url(:thumb).to_s if @movie.poster? %>
      </p>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit,'ذخیره' ,class:"btn btn-success" %>
  </div>
<% end %>
