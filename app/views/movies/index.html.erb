    <% @movies.each do |movie| %>
    <div class="post-body">
      <div class = "row post-header-div">
        <div class="col-md-12 col-md-offset-6">
          <div class="post-header">
           <h1> <%= movie.name %> </h1>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
        <table class="table table-striped">
          <tbody>
              <tr>
                <td>
                    <strong>سال ساخت</strong>
                </td>
                <td>
                  <%= movie.year %>
                </td>
              </tr>
              <tr>
                <td>
                    <strong>رده سنی</strong>
                </td>
                <td>
                  <%= movie.pg %>
                </td>
              </tr>
              <tr>
                <td>
                  <strong>مدت زمان</strong>
                </td>
                <td>
                  <%= movie.minute %>
                </td>
              </tr>
              <tr>
                <td>
                  <strong>امتیاز کاربران</strong>
                </td>
                <td>
                  <%= movie.userrate %>
                </td>
              </tr>
              <tr>
                <td>
                  <strong>امتیاز IMDB</strong>
                </td>
                <td>
                  <%= movie.imdbrate %>
                </td>
              </tr>
              <tr>
                <td>
                  <strong>کارگردان</strong>
                </td>
                <td>
                  <%= movie.director %>
                </td>
              </tr>
              <tr>
                <td>
                  <strong>نویسنده</strong>
                </td>
                <td>
                  <%= movie.writers %>
                </td>
              </tr>
              <tr>
                <td>
                  <strong>بازیگران</strong>
                </td>
                <td>
                  <%= movie.stars %>
                </td>
              </tr>
              <tr>
                <td>
                  <strong>خلاصه</strong>
                </td>
                <td>
                  <%= movie.plot %>
                </td>
              </tr>
              <tr>
                <td>
                  <strong>دسته بندی</strong>
                </td>
                <td>
                  <strong> <%= @category.find(movie.category_id).name %></strong>
                </td>
              </tr>
              <tr>
                <td>
                  <strong>دسته بندی فرعی</strong>
                </td>
                <td>
                  <strong> <%= @subcategory.find(movie.subcategory_id).name %></strong>
                </td>
              </tr>
              <tr>
                <td>
                  <strong>لینک دریافت</strong>
                </td>
                <td>
                  <strong> <a href=<%= movie.link %> > دانلود </a> </strong>
                </td>
              </tr>
              <tr class="post_create_date">
                <td>
                  <strong>تاریخ درج پست</strong>
                </td>
                <td>
                  <%= JalaliDate.to_jalali(movie.created_at).strftime("%d %B %Y") %>
                </td>
              </tr>
          </tbody>
        </table>
        </div>
        <div class="col-md-4">
          <table width="100%" height="100%" align="center" valign="center">
            <tr>
              <td>
                <%= image_tag movie.poster,class: 'img-thumbnail' %>
              </td>
            </tr>
          </table>
        </div>
      </div>

       <%= link_to 'نمایش', movie , class: 'btn btn-primary' %>
      <% if user_admin? %>
        <%= link_to 'ویرایش', edit_movie_path(movie), class: 'btn btn-default' %>
        <%= link_to 'حذف', movie, method: :delete, data: { confirm: 'مطمئن هستید؟' } , class: 'btn btn-danger'%>
      <% end %>

    </div>
    <% end %>

