<div class="row">

  <div class="col-md-4"></div>

  <div class="col-md-4 custom-box">
    <h2>ورود</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
            <%= f.email_field :email, autofocus: true,placeholder: 'ایمیل',label: false,input_html: {class: "form-control"} %>

            <%= f.password_field :password, autocomplete: "off" ,placeholder: 'کلمه عبور',label: false,input_html: {class: "form-control"} %>


          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label 'مرا به خاطر بسپار' %>
            </div>
          <% end -%>
            </div>
          <div class="actions">
            <%= f.submit "ورود",class:'btn btn-success'  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
  <div class="col-md-4"></div>
</div>